---
import { getCollection } from "astro:content";

const tags = Array.from(new Set(
    (await getCollection('posts'))
    .map(post => post.data.tags)
    .flat()
    .filter(tag => tag !== undefined))
)
---

<aside class="post-tags">
    <div class="title">Tags</div>
    <div class="container">
        {tags.map(tag => (
            <a class="tag" href={`/tag/${tag}`}>{tag}</a>
        ))}
    </div>
</aside>

<style>
.post-tags {
    flex: 1;
    min-width: 300px;
    border: 1px solid var(--color-op);
    padding: 1em;
    border-radius: var(--base-radius);
    background: var(--color-op);
}
.post-tags .title {
    font-size: 1.25em;
    font-weight: 600;
    margin-bottom: 0.5em;
}
.post-tags .container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.2em;
}
.post-tags .tag{
    padding: 4px;
    border-radius: var(--base-radius);
    transition: 0.3s;
}
.post-tags .tag:hover{
    text-shadow: 0 0 3px var(--color-deep-op),0 0 5px var(--color-deep-op),0 0 5px var(--color-deep-op);
    color: var(--main-color);
}
</style>