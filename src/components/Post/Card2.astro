---
const { post } = Astro.props

---

<div class="post-card-2">
    <div class="cover">
        <img src={post.data.cover} alt={post.data.title} class="cover-img" loading="lazy" />
    </div>
    
    <div class="meta">
        <div class="category">{post.data.category}</div>
        <a href={`/post/${post.slug}`} class="title" rel="prefetch">{ post.data.title }</a>
        <div class="desc">{ post.data.description }</div>
    </div>
</div>

<style>
.post-card-2{
    display: flex;
    width: 100%;
    margin: 0 auto;
    padding: 4em 0;
    border-bottom: 4px solid var(--color-op);
    gap: 1em;
}
.post-card-2:last-child{
    border-bottom: none;
}
.post-card-2 .cover{
    width: 45%;
    aspect-ratio: 2/1;
    border: 4px solid rgba(255, 255, 255, 0.7);
    border-radius: var(--base-radius);
    position: relative;
    overflow: hidden;
    transition: 0.3s;
}
.post-card-2:hover .cover{
    border: 4px solid rgba(255, 255, 255, 0.9);
}
.post-card-2 .cover-img{
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.post-card-2 .meta{
    width: 50%;
    display: flex;
    flex-direction: column;
}
.post-card-2 .category{
    width: fit-content;
    border-radius: calc(0.75 * var(--base-radius));
    background-color: var(--color-deep-op);
    color: #232323;
    font-weight: bold;
    padding: 4px calc(0.75 * var(--base-radius));
}
.post-card-2 .meta{
    color: white;
}
.post-card-2 .title{
    display: inline-block;
    max-width: 100%;
    font-weight: bold;
    line-height: 1.5;
    margin: 0.5rem 0;
    font-size: 1.75rem;
    color: white;
    text-decoration: none;
    transition: 0.3s;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.post-card-2 .title:hover{
    box-shadow: 0 2px white;
}
.post-card-2 .desc{
    line-height: 1.5;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 1.15em;
}

@media (max-width: 900px){
    .post-card-2{
        flex-direction: column;
    }
    .post-card-2 .meta{
        width: 100%;
    }
    .post-card-2 .cover{
        width: 100%;
    }
}
</style>