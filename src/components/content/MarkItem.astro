---
import { formatDateTime } from "src/tools/tools";

const {mark, group} = Astro.props
---
<a href={mark.url} class="mark-item" target="_blank">
    <img class="poster" src={mark.poster} loading="lazy"/>
    <div class="top">
        <div class="icon" set:html={group ? group.icon||'' : ''}></div>
        <div class="time">{ mark.time ? formatDateTime(new Date(mark.time)) : '' }</div>
    </div>
    <div class="bottom">
        <div class="title">{mark.title}</div>
        <div class="star">{mark.star}</div>
    </div>
</a>

<style>
.mark-item {
    flex-grow: 1;
    border-radius: var(--base-radius);
    overflow: hidden;
    position: relative;
    display: flex;
    transition: 0.3s;
    color: var(--color-deep-op);
    border: 2px solid var(--card-border-color);
    box-shadow: var(--card-shadow);
}
.mark-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 6px rgba(var(--main-color-meta), 0.2), var(--card-outline);
}
.mark-item .poster{
    width: 100%;
    object-fit: cover;
    filter: brightness(0.7);
    transition: 0.3s;
}
.mark-item:hover .poster{
    filter: brightness(1);
}
.mark-item .top{
    position: absolute;
    top: 0;
    left: 0;
    padding: calc(var(--base-radius) / 2) var(--base-radius);
    line-height: 1;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.mark-item .icon{
    font-size: 1.25em;
}
.mark-item .bottom{
    position: absolute;
    bottom: 0;
    left: 0;
    padding: var(--base-radius);
}
.mark-item .title{
    font-size: 1.2em;
    font-weight: 600;
    color: var(--color-deep-op);
}
.mark-item .time{
    font-size: 12px;
    font-weight: 900;
}
</style>