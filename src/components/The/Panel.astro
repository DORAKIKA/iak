---
import PostTags from "@components/Post/Tags.astro"
---

<div id="the-panel" class="hide">
    <div class="the-panel__header">
        <button onclick="window.iak.togglePanel(false)">
            <svg class="icon close" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" p-id="2663" width="32" height="32"><path d="M512 128C300.8 128 128 300.8 128 512s172.8 384 384 384 384-172.8 384-384S723.2 128 512 128zM512 832c-179.2 0-320-140.8-320-320s140.8-320 320-320 320 140.8 320 320S691.2 832 512 832z" p-id="2664"></path><path d="M672 352c-12.8-12.8-32-12.8-44.8 0L512 467.2 396.8 352C384 339.2 364.8 339.2 352 352S339.2 384 352 396.8L467.2 512 352 627.2c-12.8 12.8-12.8 32 0 44.8s32 12.8 44.8 0L512 556.8l115.2 115.2c12.8 12.8 32 12.8 44.8 0s12.8-32 0-44.8L556.8 512l115.2-115.2C684.8 384 684.8 364.8 672 352z" p-id="2665"></path></svg>
        </button>
    </div>
    <div class="the-panel__container">
        <PostTags/>
    </div>
</div>

<script is:inline>
    window.iak.togglePanel = function(flag) {
        var panel = document.getElementById('the-panel');
        if(flag !== undefined) {
            if(flag) {
                panel.classList.remove('hide');
            } else {
                panel.classList.add('hide');
            }
        } else {
            panel.classList.toggle('hide');
        }
    }
</script>

<style>
#the-panel{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 10px 20px;
    background-color: var(--main-color);
    z-index: 400;
    opacity: 1;
    transition: 0.3s;
    overflow-y: scroll;
}
#the-panel.hide{
    user-select: none;
    pointer-events: none;
    opacity: 0;
}
#the-panel .the-panel__header{
    padding: 10px;
    display: flex;
    justify-content: flex-end;
}
#the-panel button{
    width: 40px;
    height: 40px;
    border-radius: 50%;
    textalign: center;
    line-height: 40px;
    background: var(--white-op);
    color: var(--white-op-deep);
    border: none;
    font-size: 20px;
    cursor: pointer;
}
</style>