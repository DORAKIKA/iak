---
import Backtop from "./backtop.astro";
import Headings from "./Headings.vue";
const { headings } = Astro.props;
---

<div class="the-toolbar">
  <Backtop className="the-toolbar-item" />
  {
    headings ? (
      <Headings
        headings={headings}
        className="the-toolbar-item"
        client:only="vue"
      />
    ) : (
      ""
    )
  }
</div>

<style>
  .the-toolbar {
    position: fixed;
    bottom: -2rem;
    right: 2em;
    transition: 0.5s cubic-bezier(0.16, 1.02, 0.66, 1.14);
    padding: 0.5rem;
    background: var(--main-color);
    border: 4px solid var(--color-deep-op);
    border-bottom: none;
    border-radius: var(--base-radius) var(--base-radius) 0 0;
    display: flex;
    z-index: 102;
  }
  .the-toolbar:is(:hover, :focus-within) {
    bottom: 0;
  }
  .the-toolbar :global(.the-toolbar-item) {
    width: 2em;
    height: 2em;
    text-align: center;
    line-height: 2em;
    border-radius: calc(var(--base-radius) / 2);
    background: var(--main-color);
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    outline: none;
    border: none;
    color: var(--color-deep-op);
    transition: 0.3s;
  }
  .the-toolbar :global(.the-toolbar-item:is(:hover, :focus)) {
    background: var(--color-deep-op);
    color: var(--main-color);
  }
</style>
