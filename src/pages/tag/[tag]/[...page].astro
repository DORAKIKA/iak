---
import Layout from "@layouts/Layout.astro";
import { CollectionEntry, getCollection } from "astro:content";
import PostCard from "@pages/_components/Post/Card.astro";
import { site } from "src/config";

export async function getStaticPaths({ paginate }: any) {
	const posts = await getCollection('posts');

    const bucket = new Map();

    posts.forEach(post => {
        post.data.tags?.forEach(tag => {
            if (!bucket.has(tag)) {
                bucket.set(tag, [])
            }
            bucket.get(tag).push(post)
        })
    })

    return Array.from(bucket.keys()).map(tag => {
        
        const filteredPosts = bucket.get(tag)
        return paginate(filteredPosts, {
            params: { tag },
            pageSize: 12
        });
    })
}

const { tag } = Astro.params;
// 取出tag对应的所有文章
const { page } = Astro.props;

const page_meta = {
	title: '标签：' + tag + ' | ' + site.name,
}
---

<Layout
    page_meta={page_meta}
>
    <h1 slot="header">{ '标签：' + tag }</h1>
    <section id="posts">
        <div class="post-container">
            {page.data.map((post: CollectionEntry<"posts">) => (
                <PostCard post={post} />
            ))}
        </div>
        <div class="pagination">
            {page.url.prev ? <a href={page.url.prev} class="paginate prev">上一页</a> : null}
            {page.url.next ? <a href={page.url.next} class="paginate next">下一页</a> : null}
        </div>
    </section>
</Layout>

<style>
#posts{
    margin: 1rem 0 0;
}
    
#posts .post-container{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
}
.pagination{
    display: flex;
    justify-content: space-between;
    margin: 1em 0 0 0;
    gap: 1em;
}
.pagination .paginate{
    flex: 1;
    padding: 1em;
    display: inline-block;
    background: var(--color-op);
    border-radius: var(--base-radius);
    transition: 0.3s;
}
.pagination .next{
    text-align: right;
}
.pagination .paginate:is(:hover, :focus-within){
    background: var(--color-deep-op);
    color: var(--main-color);
}
</style>
<style is:global>
#posts .post-card{
    width: calc(calc(100% - 3em) / 4);
}
@media (max-width: 1500px){
    #posts .post-card{
        width: calc(calc(100% - 2em) / 3);
    }
}
@media (max-width: 1200px){
    #posts .post-card{
        width: calc(calc(100% - 1em) / 2);
    }
}
@media (max-width: 768px){
    #posts .post-card{
        width: 100%;
    }
}
</style>