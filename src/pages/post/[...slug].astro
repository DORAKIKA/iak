---
import { CollectionEntry, getCollection } from 'astro:content';
import Content from '@components/content/Content.astro';
import { site, twikoo } from 'src/config';
import Layout from '@layouts/Layout.astro';
import Twikoo from '@components/Third/Twikoo.astro';
import PostCopyright from '@pages/_components/Post/Copyright.astro'
import '@styles/article.css'
import { generatePostOpenGraph } from 'src/tools/open_graph';
import { count } from 'src/tools/tools';

export async function getStaticPaths() {
	const posts = await getCollection('posts');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'posts'>;

const post = Astro.props;
const { headings } = await post.render();
const post_count = count(post.body);

const keywords = post.data.tags?.concat([post.data.category??'']).join(',') || '';

const page_meta = {
	title: post.data.title + ' | ' + site.name,
	description: post.data.description,
	keywords: keywords,
	cover: post.data.cover,
}
// 生成 Open Graph 网站与文章类型数据
const meta_og = generatePostOpenGraph(Astro, post);
---

<Layout
	page_meta={page_meta}
	headings={headings}
	meta_og={meta_og}
>
	<div class="article-head" slot="header">
			
		<h1 class="article-title">{ post.data.title }</h1>
		<div class="article-meta">
			<div class="meta-section">

				{post.data.category ? (<div class="meta-item">
					<div class="key"><span>分类</span></div>
					<div class="value">
						<svg class="icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" p-id="2766" width="128" height="128"><path d="M725.290667 725.290667m-213.333334 0a213.333333 213.333333 0 1 0 426.666667 0 213.333333 213.333333 0 1 0-426.666667 0Z" fill="#030835" p-id="2767"></path><path d="M789.205333 234.794667m-149.333333 0a149.333333 149.333333 0 1 0 298.666667 0 149.333333 149.333333 0 1 0-298.666667 0Z" fill="#030835" p-id="2768"></path><path d="M235.861333 788.138667m-149.333333 0a149.333333 149.333333 0 1 0 298.666667 0 149.333333 149.333333 0 1 0-298.666667 0Z" fill="#030835" p-id="2769"></path><path d="M298.709333 298.709333m-213.333333 0a213.333333 213.333333 0 1 0 426.666667 0 213.333333 213.333333 0 1 0-426.666667 0Z" p-id="2770"></path></svg>
						<span class="category">{ post.data.category }</span>
					</div>
				</div>) : ''}

				{ post.data.tags?.map((tag:string) => (
					<a class="meta-item" href={`/tag/${tag}`}>
						<div class="key">Tag</div>
						<div class="value">
							<svg class="icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" p-id="7410" width="128" height="128"><path d="M911.6 337.9l-25.9 103.7c-2.1 7.4-6.9 11.1-14.3 11.1H719.9l-29.6 118.5h144c4.7 0 8.5 1.9 11.6 5.6 3.1 4.3 4 8.7 2.8 13l-26.1 103.7c-1.6 7.4-6.3 11.1-14.3 11.1H656.9l-37.5 151.9c-2.1 7.4-6.9 11.1-14.3 11.1H501.4c-5 0-9-1.9-12.1-5.6-2.8-3.7-3.7-8-2.8-13l36.1-144.4H405.1l-37.5 151.9c-2.1 7.4-6.9 11.1-14.3 11.1H249c-4.7 0-8.5-1.9-11.6-5.6-2.8-3.7-3.7-8-2.8-13l36.1-144.3h-144c-4.7 0-8.5-1.9-11.6-5.6-2.8-3.7-3.7-8-2.8-13l26-103.9c2.1-7.4 6.9-11.1 14.3-11.1H304l29.6-118.5H189.7c-4.7 0-8.5-1.9-11.6-5.6-3.1-4.3-4-8.7-2.8-13l26-103.8c1.6-7.4 6.3-11.1 14.3-11.1H367l37.5-151.9c2.1-7.4 7.1-11.1 14.8-11.1H523c4.7 0 8.5 1.9 11.6 5.6 2.8 3.7 3.7 8 2.8 13l-36.1 144.4H619l37.5-151.9c2.1-7.4 7.1-11.1 14.8-11.1H775c4.7 0 8.5 1.9 11.6 5.6 2.8 3.7 3.7 8 2.8 13l-36.1 144.4h144c4.7 0 8.5 1.9 11.6 5.6 2.7 3.9 3.7 8.2 2.7 13.2zM556 571.2l29.6-118.5H468l-29.6 118.5H556z" fill="#5c5c5c" p-id="7411"></path></svg>
							<span class="tag">{ tag }</span>
						</div>
					</a>
				)) }
				<div class="meta-item">
					<div class="key">日期</div>
					<div class="value">
						<svg class="icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" p-id="1360" width="128" height="128"><path d="M878.634667 371.072H145.365333A42.496 42.496 0 0 1 106.069333 311.466667 213.248 213.248 0 0 1 298.666667 189.738667h426.666666A213.205333 213.205333 0 0 1 917.930667 311.466667a42.496 42.496 0 0 1-39.296 59.605333zM938.666667 458.666667V725.333333a213.333333 213.333333 0 0 1-213.333334 213.333334H298.666667a213.333333 213.333333 0 0 1-213.333334-213.333334v-266.666666a42.666667 42.666667 0 0 1 42.666667-42.666667h768a42.666667 42.666667 0 0 1 42.666667 42.666667z" fill="#030835" p-id="1361"></path><path d="M692.949333 294.101333a32.810667 32.810667 0 0 1-32.810666-32.810666V118.186667a32.810667 32.810667 0 0 1 65.621333 0v143.146666a32.810667 32.810667 0 0 1-32.810667 32.853334zM331.050667 294.101333a32.810667 32.810667 0 0 1-32.810667-32.810666V118.186667a32.810667 32.810667 0 1 1 65.621333 0v143.146666a32.810667 32.810667 0 0 1-32.853333 32.853334z" p-id="1362"></path></svg>
						<span class="date">{ post.data.date?.toISOString().substring(0, 10) }</span>
					</div>
				</div>
				<div class="meta-item">
					<div class="key">全文字数</div>
					<div class="value">
						<svg class="icon" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" p-id="8403" width="128" height="128"><path d="M853.333333 896H170.666667c-46.933333 0-85.333333-38.4-85.333334-85.333333V213.333333c0-46.933333 38.4-85.333333 85.333334-85.333333h682.666666c46.933333 0 85.333333 38.4 85.333334 85.333333v597.333334c0 46.933333-38.4 85.333333-85.333334 85.333333z m-149.333333-260.266667c29.866667-4.266667 59.733333 8.533333 85.333333 29.866667 12.8 17.066667 21.333333 34.133333 21.333334 55.466667 0 29.866667-17.066667 59.733333-46.933334 72.533333l21.333334 17.066667H853.333333V213.333333h-51.2c4.266667 12.8 8.533333 29.866667 8.533334 46.933334-4.266667 25.6-12.8 46.933333-29.866667 68.266666L682.666667 439.466667h140.8v51.2h-221.866667v-42.666667s128-136.533333 136.533333-149.333333c8.533333-21.333333 12.8-46.933333 4.266667-68.266667-12.8-12.8-25.6-17.066667-38.4-17.066667-12.8 0-25.6 4.266667-34.133333 17.066667-8.533333 12.8-12.8 25.6-12.8 38.4h-64c0-21.333333 8.533333-38.4 17.066666-55.466667H554.666667v597.333334h110.933333v-38.4h42.666667c21.333333-4.266667 38.4-21.333333 38.4-42.666667 0-12.8-4.266667-21.333333-8.533334-29.866667-8.533333-8.533333-21.333333-12.8-29.866666-12.8 0 0-46.933333 0-46.933334 38.4H597.333333c0-17.066667 4.266667-29.866667 12.8-42.666666 21.333333-34.133333 55.466667-51.2 93.866667-46.933334z m-388.266667-200.533333V682.666667h64V358.4h-4.266666L238.933333 405.333333v51.2l76.8-21.333333z" p-id="8404"></path></svg>
						<span>{post_count}</span>
					</div>
				</div>
			</div>
			<div class="meta-section">
				<div class="meta-item"><span class="description">{ post.data.description }</span></div>
			</div>
		</div>
	</div>
	<article id="post" class="article-post">
		<Content entry={post} />
	</article>
	<PostCopyright title={post.data.title} />
	<Twikoo/>
</Layout>

<style is:global set:html={`html{--bg-image-url: url(${post.data.cover})}`}></style>

<style>
.article-head{
	width: 100%;
	color: rgba(var(--white-meta), 0.8);
}
.article-title{
    line-height: 2;
}
.article-meta{
    display: flex;
    justify-content: space-between;
}
.article-meta .meta-section{
    max-width: 47%;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
}
.article-meta .meta-item{
    width: max-content;
    flex: 1 1 auto;
    display: flex;
    justify-content: center;
    flex-direction: column;
    gap: 4px;
	background: rgba(var(--white-meta), 0.2);
    backdrop-filter: blur(8px);
    padding: 16px;
    border-radius:var(--base-radius);
    line-height: 1.5;
}
.article-meta .meta-item .key{
    opacity: 0.8;
    font-size: 0.8em;
}
.article-meta .meta-item .value{
	display: flex;
	justify-content: space-between;
	align-items: center;
	gap: 4px;
	line-height: 1;
}
.article-meta .description{
    display: inline-block;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
#post{
	margin: 2rem auto;
	line-height: 2;
}
@media(max-width: 768px){
	.article-meta{
		flex-direction: column;
		gap: 1rem;
	}
	.article-meta .meta-section{
		max-width: 100%;
		gap: 4px;
	}
	.article-meta .meta-item{
		width: fit-content;
		flex: 0 1 auto;
		flex-direction: row;
		padding: 4px 8px;
		border-radius: 999px;
	}
	.article-meta .meta-item .key{
		display: none;
	}
	.meta-section:has(.description){
		display: none;
	}
}
</style>