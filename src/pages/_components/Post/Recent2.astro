---
import { getRecentPosts } from "@/pages/_contents/posts";
import PostCard from "./Card2.astro"

const recentPosts = getRecentPosts(6);
---

<div class="post-recent-2">
    <h2 class="title">最近文章</h2>
    <div class="post-list-container">
        {recentPosts.map(post => (
            <PostCard post={post} />
        ))}
    </div>
</div>

<style>
    
.post-recent-2{
    width: 100%;
    /* overflow: hidden; */
}
.post-recent-2>.title{
    font-size: 2rem;
    text-align: center;
}
.post-recent-2 .post-list-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    /* gap: 1rem; */
}
</style>
<style is:global>

.post-recent-2 .post-card{
    width: 100%;
}
</style>