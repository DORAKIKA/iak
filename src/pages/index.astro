---
import Layout from "@layouts/Layout.astro"
import PostSlider from "@components/Post/Slider.vue"
import PostRecent from "@components/Post/Recent.astro"
import TwikooRecent from "@components/Third/TwikooRecent.vue";
import RecentMemories from "@components/content/RecentMemories.astro";

import { default_cover, site, twikoo } from "src/config";
import { generateOpenGraph } from "src/tools/open_graph";
const page_meta = {
	title: site.name + ' | ' + site.slogan,
	description: site.description,
};
const meta_og = generateOpenGraph(Astro, page_meta);
---


<Layout
	page_meta={page_meta}
	meta_og={meta_og}
>
	<PostSlider slot="header" client:load/>
	<PostRecent/>
	<RecentMemories/>
	{twikoo.enabled ? <TwikooRecent client:load/> : null}
</Layout>
