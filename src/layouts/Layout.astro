---
import BaseHead from '@components/BaseHead/BaseHead.astro';
import TheHeader from "@components/The/Header.astro"
import "@styles/TheHeader.css"
import TheFooter from '@components/The/Footer.astro';
import TheToolbar from '@components/The/Toolbar/Toolbar.astro'
import ShareCard from "@components/Third/ShareCard.astro";


const { title, description, headings, cover } = Astro.props;
---

<html lang="zh-CN">
	<head>
		<BaseHead title={title} description={description} cover={cover} />
	</head>

	<body>
		<script is:inline>
			// iak 全局对象，之后会注入一些函数以便调用
			window.iak = {}
		</script>
		<TheHeader/>
		<TheToolbar headings={headings}/>
        <main style="padding: 0 var(--side-padding)">
            <slot></slot>
        </main>
		<TheFooter />
		<ShareCard title={title} description={description} cover={cover}/>
	</body>
</html>
