---
import BaseHead from '@components/BaseHead/BaseHead.astro';
import TheHeader from "@components/The/Header/Header.astro"
import TheFooter from '@components/The/Footer.astro';
import TheToolbar from '@components/The/Toolbar/Toolbar.astro'
import ShareCard from "@components/Third/ShareCard.astro";
import GlobalInject from '@components/The/GlobalInject.astro';


const {
	page_meta,
	headings,
	meta_og,
	header
 } = Astro.props;
---

<html lang="zh-CN">
	<head>
		<BaseHead
			page_meta={page_meta}
			meta_og={meta_og}
		/>
	</head>

	<body>
		<script is:inline src="/js/iak.js"></script>
		<TheHeader header={header}>
			<slot name="header"></slot>
		</TheHeader>
		<TheToolbar headings={headings}/>
        <main style="padding: 0 var(--side-padding)">
            <slot></slot>
        </main>
		<TheFooter />
		<ShareCard page_meta={page_meta} />

		<GlobalInject/>
	</body>
</html>
